<AnchorPane prefHeight="330.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep12.jdbc.sql_injection.controller.LoginViewController">
   <children>
      <Label alignment="CENTER" layoutX="55.0" layoutY="47.0" prefHeight="26.0" prefWidth="501.0" text="LOGIN">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Label>
      <TextField fx:id="txtUserName" alignment="CENTER" layoutX="51.0" layoutY="140.0" prefHeight="24.0" prefWidth="501.0" promptText="Enter your username here">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Label alignment="CENTER" layoutX="51.0" layoutY="112.0" prefHeight="21.0" prefWidth="501.0" text="username :">
         <font>
            <Font size="18.0" />
